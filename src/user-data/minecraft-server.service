
[Unit]
Description=Minecraft Server
Wants=network.target
After=network.target

[Service]
WorkingDirectory=/home/minecraftuser
User=minecraftuser

KillMode=process
KillSignal=SIGINT

ExecStart=/usr/share/java -Xmx512M -jar /home/minecraftuser/minecraft_server.jar nogui

[Install]
WantedBy=multi-user.target
